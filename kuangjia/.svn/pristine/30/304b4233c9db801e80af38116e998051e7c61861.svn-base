<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/backg"
    android:orientation="vertical">
    <include layout="@layout/quickpaytitle"/>
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120px"
        android:layout_marginLeft="40px"
        android:layout_marginRight="40px"
        android:orientation="vertical"
        android:background="@drawable/white_bakg_roundshape">
        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/username_layout"
            android:layout_height="150px">
            <TextView
                android:id="@+id/tv_cardnumber"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="@dimen/bodytextsize"
                android:textColor="@color/black"
                android:layout_marginLeft="30px"
                android:text="银行卡号"/>
            <TextView
                android:id="@+id/cardnumber_tv"
                android:layout_width="match_parent"
                android:textSize="@dimen/bodytextsize"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/tv_cardnumber"
                android:gravity="center_vertical"
                android:layout_marginLeft="30px"/>
        </com.zhy.autolayout.AutoRelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/backg"></View>

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150px">
            <TextView
                android:id="@+id/tv_skh_display"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="@dimen/bodytextsize"
                android:textColor="@color/black"
                android:layout_marginLeft="30px"
                android:text="收款银行"/>
           <TextView
               android:id="@+id/cardbankname_tv"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:gravity="center_vertical"
               android:layout_marginLeft="30px"
               android:textSize="@dimen/bodytextsize"
               android:layout_toRightOf="@id/tv_skh_display"/>
        </com.zhy.autolayout.AutoRelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/backg"></View>

        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/kaihuprovinces_layout"
            android:layout_width="match_parent"
            android:layout_marginTop="1px"
            android:layout_height="150px">
            <TextView
                android:id="@+id/tv_kaihuprovinces_display"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="@dimen/bodytextsize"
                android:textColor="@color/black"
                android:layout_marginLeft="30px"
                android:text="开户省份"/>
            <TextView
                android:id="@+id/select_provinces_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_marginLeft="30px"
                android:textSize="@dimen/bodytextsize"
                android:layout_toRightOf="@id/tv_kaihuprovinces_display"
                android:text="请选择省份"/>

            <ImageView
                android:layout_width="20px"
                android:layout_height="50px"
                android:layout_alignParentRight="true"
                android:layout_marginRight="37px"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_user_jiantou"/>
        </com.zhy.autolayout.AutoRelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/backg"></View>

        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/kaihucity_layout"
            android:layout_width="match_parent"
            android:layout_marginTop="1px"
            android:layout_height="150px">
            <TextView
                android:id="@+id/tv_kaihucity_display"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="@dimen/bodytextsize"
                android:textColor="@color/black"
                android:layout_marginLeft="30px"
                android:text="开户城市"/>
            <TextView
                android:id="@+id/select_city_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_marginLeft="30px"
                android:textSize="@dimen/bodytextsize"
                android:layout_toRightOf="@id/tv_kaihucity_display"
                android:text="请选择城市"/>

            <ImageView
                android:layout_width="20px"
                android:layout_height="50px"
                android:layout_alignParentRight="true"
                android:layout_marginRight="37px"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_user_jiantou"/>
        </com.zhy.autolayout.AutoRelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/backg"></View>
        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/kaihusubbranch_layout"
            android:layout_width="match_parent"
            android:layout_height="150px">
            <TextView
                android:id="@+id/tv_kaihuzhihang_display"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/black"
                android:layout_marginLeft="30px"
                android:textSize="@dimen/bodytextsize"
                android:text="开户支行"/>
            <TextView
                android:id="@+id/select_subbranch_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_marginLeft="30px"
                android:textSize="@dimen/bodytextsize"
                android:layout_toRightOf="@id/tv_kaihuzhihang_display"
                android:text="选择开户支行"/>

            <ImageView
                android:layout_width="20px"
                android:layout_height="50px"
                android:layout_alignParentRight="true"
                android:layout_marginRight="37px"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_user_jiantou"/>
        </com.zhy.autolayout.AutoRelativeLayout>



    </com.zhy.autolayout.AutoLinearLayout>


    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/lay_contract"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/backg"
        android:layout_gravity="center_horizontal"
        android:visibility="gone"
        >
        <com.rey.material.widget.CheckBox
            android:id="@+id/cb_agree"
            style="@style/LightCheckBox"
            android:checked="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80px"/>
        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28px"
            android:layout_marginTop="80px"
            android:layout_toRightOf="@+id/cb_agree"
            android:textColor="@color/colorPrimary"
            android:text="同意"/>
        <TextView
            android:id="@+id/tv_payProtocols"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80px"
            android:layout_toRightOf="@+id/tv1"
            android:text="@string/quick_pay_protocols"
            android:textColor="@color/btnbackg"/>
    </com.zhy.autolayout.AutoRelativeLayout>


    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="120px"
        android:layout_marginLeft="40px"
        android:layout_marginRight="40px"
        android:layout_height="wrap_content">
        <com.rey.material.widget.Button
            android:id="@+id/bandcardok_nextbtn"
            style="@style/LightRaiseColorButtonRippleStyle"
            android:layout_width="match_parent"
            android:gravity="center"
            android:textSize="@dimen/contenttitletext"
            android:text="确定"/>

    </com.zhy.autolayout.AutoLinearLayout>


</com.zhy.autolayout.AutoLinearLayout>
