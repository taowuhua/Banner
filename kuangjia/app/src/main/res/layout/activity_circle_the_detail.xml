<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backg"
    android:orientation="vertical">
    <include layout="@layout/quickpaytitle"/>
    <com.zhy.autolayout.AutoLinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="30px"
        >
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="60px"
            android:gravity="center">
            <ImageView
                android:layout_width="75px"
                android:layout_height="75px"
                android:src="@drawable/goldmedal"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginLeft="20px"
                android:textColor="@color/black"
                android:textSize="@dimen/bodytextsize"
                android:text="一级圈友"/>

        </com.zhy.autolayout.AutoLinearLayout>
<com.zhy.autolayout.AutoLinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="90px"
    android:gravity="center_vertical"
    android:layout_marginBottom="90px"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/one_circle_allcount_tv"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/secondblack"
        android:textSize="@dimen/bodylittletextsize"/>
    <TextView
        android:id="@+id/one_circle_validitycount_tv"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/light_brown"
        android:textSize="@dimen/bodylittletextsize"/>

</com.zhy.autolayout.AutoLinearLayout>



    </com.zhy.autolayout.AutoLinearLayout>
    <com.zhy.autolayout.AutoLinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="30px"
        >
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="60px"
            android:gravity="center">
            <ImageView
                android:layout_width="75px"
                android:layout_height="75px"
                android:src="@drawable/silvermedal"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginLeft="20px"
                android:textColor="@color/black"
                android:textSize="@dimen/bodytextsize"
                android:text="二级圈友"/>

        </com.zhy.autolayout.AutoLinearLayout>
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="90px"
            android:gravity="center_vertical"
            android:layout_marginBottom="90px"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/two_circle_allcount_tv"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/secondblack"
                android:textSize="@dimen/bodylittletextsize"/>
            <TextView
                android:id="@+id/two_circle_validitycount_tv"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/light_brown"
                android:textSize="@dimen/bodylittletextsize"/>

        </com.zhy.autolayout.AutoLinearLayout>



    </com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoLinearLayout>
