<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include
        android:id="@+id/lay_title"
        layout="@layout/quickpaytitle"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fadingEdge="none"
        android:scrollbars="none" >
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/lay_credit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="53px"
        android:layout_marginTop="46px">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="@string/auth_photo"
            android:textSize="16sp"/>
        </com.zhy.autolayout.AutoRelativeLayout>
    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/lay_front_photo"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="53px"
        android:layout_marginTop="51px"
        android:layout_marginRight="49px"
        android:orientation="horizontal"
        >
    <com.zhy.autolayout.AutoFrameLayout
        android:id="@+id/lay_front"
        android:layout_width="150dp"
        android:layout_height="match_parent"
        >
        <ImageView
            android:id="@+id/iv_idcard_front"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/auth_idcard_front_photo"/>
        <ImageView
            android:id="@+id/iv_check_front"
            android:layout_width="48px"
            android:layout_height="48px"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center|bottom"
            android:visibility="gone"
            android:src="@drawable/auth_photo_checked"/>
        </com.zhy.autolayout.AutoFrameLayout>
        <ImageView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="46px"
            android:src="@drawable/auth_example_front"/>
    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/lay_back_photo"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="53px"
        android:layout_marginTop="53px"
        android:layout_marginRight="49px"
        android:orientation="horizontal"
        >
        <com.zhy.autolayout.AutoFrameLayout
            android:id="@+id/lay_back"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            >
            <ImageView
                android:id="@+id/iv_idcard_back"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/auth_idcard_back_photo"/>
            <ImageView
                android:id="@+id/iv_check_back"
                android:layout_width="48px"
                android:layout_height="48px"
                android:layout_gravity="center|bottom"
                android:visibility="gone"
                android:layout_marginBottom="10dp"
                android:src="@drawable/auth_photo_checked"/>
        </com.zhy.autolayout.AutoFrameLayout>
        <ImageView
            android:layout_toRightOf="@+id/lay_back"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="46px"
            android:src="@drawable/auth_example_back"/>
    </com.zhy.autolayout.AutoLinearLayout>
    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="53px"
        android:layout_marginTop="77px">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="@string/auth_photo_hold"
            android:textSize="16sp"/>
    </com.zhy.autolayout.AutoRelativeLayout>
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginLeft="127px"
        android:layout_marginTop="51px"
        android:orientation="horizontal"
        >
        <com.zhy.autolayout.AutoFrameLayout
            android:id="@+id/lay_hand"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            >
            <ImageView
                android:id="@+id/iv_idcard_hold"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/auth_idcard_hand_photo"/>
            <ImageView
                android:id="@+id/iv_check_hold"
                android:layout_width="48px"
                android:layout_height="48px"
                android:layout_gravity="center|bottom"
                android:visibility="gone"
                android:layout_marginBottom="10dp"
                android:src="@drawable/auth_photo_checked"/>
        </com.zhy.autolayout.AutoFrameLayout>
        <ImageView
            android:layout_toRightOf="@+id/lay_hand"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="192px"
            android:src="@drawable/handhodcard"/>
    </com.zhy.autolayout.AutoLinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70px"
        android:layout_marginBottom="46px">
        <com.rey.material.widget.Button
            android:id="@+id/btn_next"
            android:layout_width="match_parent"
            android:layout_marginLeft="70px"
            android:layout_marginRight="70px"
            android:textColor="@android:color/white"
            style="@style/LightRaiseColorButtonRippleStyle"
            android:text="@string/upload_credit"
            android:textSize="@dimen/contenttitletext"
            android:layout_gravity="center_horizontal"
            />
    </LinearLayout>
        </com.zhy.autolayout.AutoLinearLayout>
    </ScrollView>


</com.zhy.autolayout.AutoLinearLayout>
