<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
        android:background="@color/white">
    <ImageView
        android:id="@+id/closeDialog_iv"
        android:layout_width="60px"
        android:layout_height="60px"
        android:layout_gravity="left"
        android:src="@drawable/close_click"
        android:layout_marginLeft="20px"
        android:layout_marginTop="20px"
        />
<TextView
    android:layout_width="wrap_content"
    android:gravity="center"
    android:layout_height="wrap_content"
    android:layout_marginTop="10px"
    android:textColor="@color/black"
    android:textSize="@dimen/mediumtitletext"
    android:text="请输入验证码"/>
    <TextView
        android:id="@+id/verificationcode_tv_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="30px"
        android:textColor="@color/threeblack"
        android:textSize="@dimen/bodytextsize"/>

    <com.rey.material.widget.Button
        android:id="@+id/sendagin_nextbtn"
        style="@style/LightRaiseColorButtonRippleStyle"
        android:layout_width="wrap_content"
        android:layout_height="100px"
        android:paddingLeft="20px"
        android:paddingRight="20px"
        android:lines="1"
        android:gravity="center"
        android:layout_marginTop="30px"
        android:text="重新发送"
        android:visibility="gone"
        android:textSize="@dimen/bodylittletextsize"/>

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/verificationCode_layout"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_marginTop="30px"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        android:layout_marginBottom="60px"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/verificationCode_edit1"
            android:layout_width="100px"
            android:layout_height="100px"
            android:gravity="center"
            android:ems="1"
            android:maxLength="1"
            android:inputType="number"
            android:textColor="@color/black"
            android:layout_marginRight="5px"
            android:background="@drawable/verificationedit_bg"/>
        <EditText
            android:id="@+id/verificationCode_edit2"
            android:layout_width="100px"
            android:layout_height="100px"
            android:gravity="center"
            android:ems="1"
            android:maxLength="1"
            android:inputType="number"
            android:layout_marginRight="5px"
            android:textColor="@color/black"
            android:background="@drawable/verificationedit_bg"/>
        <EditText
            android:id="@+id/verificationCode_edit3"
            android:layout_width="100px"
            android:layout_height="100px"
            android:layout_marginRight="5px"
            android:gravity="center"
            android:ems="1"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="@color/black"
            android:background="@drawable/verificationedit_bg"/>
        <EditText
            android:id="@+id/verificationCode_edit4"
            android:layout_width="100px"
            android:layout_height="100px"
            android:gravity="center"
            android:ems="1"
            android:inputType="number"
            android:maxLength="1"
            android:layout_marginRight="5px"
            android:textColor="@color/black"
            android:background="@drawable/verificationedit_bg"/>
        <EditText
            android:id="@+id/verificationCode_edit5"
            android:layout_width="100px"
            android:layout_height="100px"
            android:gravity="center"
            android:ems="1"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="@color/black"
            android:layout_marginRight="5px"
            android:visibility="gone"
            android:background="@drawable/verificationedit_bg"/>
        <EditText
            android:id="@+id/verificationCode_edit6"
            android:layout_width="100px"
            android:layout_height="100px"
            android:gravity="center"
            android:ems="1"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="@color/black"
            android:visibility="gone"
            android:background="@drawable/verificationedit_bg"/>


    </com.zhy.autolayout.AutoLinearLayout>


</com.zhy.autolayout.AutoLinearLayout>
