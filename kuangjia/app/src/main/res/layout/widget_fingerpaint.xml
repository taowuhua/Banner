<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f0"
    android:orientation="vertical" >

    <FrameLayout
        android:id="@+id/finger_view"
        android:layout_width="1784px"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/lay_bg" >
    </FrameLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="24px"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_shuoming"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:textSize="10sp"
            android:gravity="left|center_vertical"
            android:text="@string/signature_notice" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textSize="10sp"
            android:gravity="right|center_vertical"/>
    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="15dp"
        android:gravity="center"
        android:orientation="horizontal" >
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="2dp"
            android:layout_height="110px"
            android:layout_weight="2"
            android:gravity="center_vertical|left" >
        <com.rey.material.widget.Button
            android:id="@+id/tv_clear"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/button_blank_bg"
            android:gravity="center"
            android:textSize="@dimen/contenttitletext"
            android:text="@string/clear_signature"
            android:textColor="@color/text_a"
            />
        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="2dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|left" >
        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="2dp"
            android:layout_height="110px"
            android:layout_weight="3"
            android:gravity="center" >
            <com.rey.material.widget.Button
                android:id="@+id/tv_ok"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                style="@style/LightRaiseColorButtonRippleStyle"
                android:gravity="center"
                android:textSize="@dimen/contenttitletext"
                android:text="@string/agree"
                android:textColor="@color/white"
                />
        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoLinearLayout>