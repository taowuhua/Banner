<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@color/background_ed"
    android:orientation="vertical">
    <include layout="@layout/commontitle"/>
   <com.zhy.autolayout.AutoLinearLayout
       android:layout_width="match_parent"
       android:background="@color/white"
       android:gravity="center"
       android:layout_height="150px">
       <TextView
           android:layout_width="0dp"
           android:layout_height="match_parent"
           android:textSize="@dimen/bodytextsize"
           android:textColor="@color/secondblack"
           android:gravity="center"
           android:layout_alignParentLeft="true"
           android:layout_weight="1"
           android:text="持卡人"/>
       <EditText
           android:layout_width="0dp"
           android:layout_height="match_parent"
           android:textSize="@dimen/contenttitletext"
           android:hint="请输入持卡人姓名"
           android:background="@null"
           android:maxLength="9"
           android:textColor="@color/secondblack"
           android:layout_weight="3"
           android:focusable="true"
           android:textColorHint="@color/fourblack"
           android:focusableInTouchMode="true"
           />

   </com.zhy.autolayout.AutoLinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/fourblack"></View>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:gravity="center"
        android:layout_height="150px">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="@dimen/bodytextsize"
            android:textColor="@color/secondblack"
            android:gravity="center"
            android:layout_alignParentLeft="true"
            android:layout_weight="1"
            android:text="卡号"/>
        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="@dimen/contenttitletext"
            android:hint="请输入信用卡卡号"
            android:background="@null"
            android:maxLength="9"
            android:textColor="@color/secondblack"
            android:layout_weight="3"
            android:focusable="true"
            android:textColorHint="@color/fourblack"
            android:focusableInTouchMode="true"
            />

    </com.zhy.autolayout.AutoLinearLayout>


    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="100px">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right|center_vertical"
            android:textColor="@color/warning_icon_ffab2e"
            android:layout_marginRight="30px"
            android:text="查看支持银行卡列表"/>

    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:gravity="center"
        android:layout_height="150px">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="@dimen/bodytextsize"
            android:textColor="@color/secondblack"
            android:gravity="center"
            android:layout_alignParentLeft="true"
            android:layout_weight="1"
            android:text="账单日"/>
        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="@dimen/contenttitletext"
            android:hint="请选择账单日"
            android:background="@null"
            android:maxLength="9"
            android:textColor="@color/secondblack"
            android:layout_weight="3"
            android:focusable="true"
            android:textColorHint="@color/fourblack"
            android:focusableInTouchMode="true"
            />

    </com.zhy.autolayout.AutoLinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/fourblack"></View>
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:gravity="center"
        android:layout_height="150px">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="@dimen/bodytextsize"
            android:textColor="@color/secondblack"
            android:gravity="center"
            android:layout_alignParentLeft="true"
            android:layout_weight="1"
            android:text="还款日"/>
        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="@dimen/contenttitletext"
            android:hint="请选择还款日"
            android:background="@null"
            android:maxLength="9"
            android:textColor="@color/secondblack"
            android:layout_weight="3"
            android:focusable="true"
            android:textColorHint="@color/fourblack"
            android:focusableInTouchMode="true"
            />

    </com.zhy.autolayout.AutoLinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/fourblack"></View>
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:gravity="center"
        android:layout_height="150px">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="@dimen/bodytextsize"
            android:textColor="@color/secondblack"
            android:gravity="center"
            android:layout_alignParentLeft="true"
            android:layout_weight="1"
            android:text="手机号"/>
        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="@dimen/contenttitletext"
            android:hint="请输入银行预留手机号"
            android:background="@null"
            android:maxLength="9"
            android:textColor="@color/secondblack"
            android:layout_weight="3"
            android:focusable="true"
            android:textColorHint="@color/fourblack"
            android:focusableInTouchMode="true"
            />

    </com.zhy.autolayout.AutoLinearLayout>


    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/logobtn_layout"
        android:layout_width="match_parent"
        android:layout_below="@id/whitebag_layout"
        android:layout_marginTop="100px"
        android:layout_marginLeft="40px"
        android:layout_marginRight="40px"
        android:layout_height="wrap_content">
        <com.rey.material.widget.Button
            android:id="@+id/register_btn"
            style="@style/LightRaiseColorButtonRippleStyle"
            android:layout_width="match_parent"
            android:gravity="center"
            android:textSize="@dimen/contenttitletext"
            android:text="确认"/>

    </com.zhy.autolayout.AutoLinearLayout>






</com.zhy.autolayout.AutoLinearLayout>
