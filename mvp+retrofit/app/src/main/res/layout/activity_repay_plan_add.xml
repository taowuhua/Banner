<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="40px"
        android:paddingRight="40px"
        android:paddingTop="40px"
        android:paddingBottom="40px"
        android:background="@color/white">
        <TextView
            android:text="还款总金额"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"/>
        <EditText
            android:id="@+id/edt_all_repay_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:hint="0.00元"
            android:textColorHint="#cccccc"
            android:textCursorDrawable="@null"
            android:background="@null"
            android:textSize="@dimen/maxtextsize"/>
    </com.zhy.autolayout.AutoRelativeLayout>
    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/fourblack" />
    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="40px"
        android:paddingRight="40px"
        android:paddingTop="40px"
        android:paddingBottom="40px"
        android:background="@color/white">
        <TextView
            android:text="充值金额"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"/>
        <EditText
            android:id="@+id/edt_recharge_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:hint="0.00元"
            android:textColorHint="#cccccc"
            android:textCursorDrawable="@null"
            android:background="@null"
            android:textSize="@dimen/maxtextsize"/>
    </com.zhy.autolayout.AutoRelativeLayout>
    <View
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/fourblack" />
    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="40px"
        android:paddingRight="40px"
        android:paddingTop="40px"
        android:paddingBottom="40px"
        android:background="@color/white">
        <TextView
            android:text="还款计划"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"/>
        <TextView
            android:id="@+id/edt_repay_plan_term"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColorHint="#cccccc"
            android:textCursorDrawable="@null"
            android:background="@null"
            android:textSize="@dimen/maxtextsize"/>
        <ImageView
            android:layout_width="20px"
            android:layout_height="50px"
            android:layout_alignParentRight="true"
            android:background="@drawable/icon_user_jiantou" />
    </com.zhy.autolayout.AutoRelativeLayout>
    <TextView
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#cccccc"
        android:text="@string/repay_plan_tip"/>
    <TextView
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_338cff"
        android:text="@string/repay_plan_contract"/>
    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/lay_btn"
        android:layout_below="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40px"
        android:layout_marginRight="40px"
        android:layout_marginTop="80px">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.rey.material.widget.Button
                android:id="@+id/btn_login"
                style="@style/LightRaiseColorButtonRippleStyle"
                android:layout_width="match_parent"
                android:gravity="center"
                android:text="提交计划"
                android:textSize="@dimen/contenttitletext" />
        </LinearLayout>

    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoLinearLayout>